@page "/"

<PageTitle>GPX Activities - Home</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Welcome to GPX Activities</MudText>
<MudText Class="mb-8">
    Track and analyze your GPS fitness activities. Upload GPX files from your favorite fitness devices and view detailed analytics, routes on interactive maps, and performance metrics.
</MudText>

<MudGrid Class="mb-8">
    <MudItem xs="12" md="4">
        <MudCard Class="pa-4 h-100">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudIcon Icon="@Icons.Material.Filled.CloudUpload" Size="Size.Large" Color="Color.Primary" />
                    <MudText Typo="Typo.h6">Import Activities</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2" Class="mb-4">
                    Upload your GPX files from Garmin, Strava, or any fitness device to start tracking your activities.
                </MudText>
                <MudButton Variant="Variant.Filled"
                          Color="Color.Primary"
                          StartIcon="@Icons.Material.Filled.CloudUpload"
                          Href="/import"
                          FullWidth="true">
                    Import GPX File
                </MudButton>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" md="4">
        <MudCard Class="pa-4 h-100">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudIcon Icon="@Icons.Material.Filled.List" Size="Size.Large" Color="Color.Success" />
                    <MudText Typo="Typo.h6">View Activities</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2" Class="mb-4">
                    Browse all your activities with detailed metrics including distance, elevation, speed, and duration.
                </MudText>
                <MudButton Variant="Variant.Filled"
                          Color="Color.Success"
                          StartIcon="@Icons.Material.Filled.List"
                          Href="/activities"
                          FullWidth="true">
                    View Activities
                </MudButton>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" md="4">
        <MudCard Class="pa-4 h-100">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudIcon Icon="@Icons.Material.Filled.Map" Size="Size.Large" Color="Color.Info" />
                    <MudText Typo="Typo.h6">Interactive Maps</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2" Class="mb-4">
                    Visualize your routes on interactive maps with elevation profiles and detailed activity analysis.
                </MudText>
                <MudButton Variant="Variant.Outlined"
                          Color="Color.Info"
                          StartIcon="@Icons.Material.Filled.Map"
                          Href="/activities"
                          FullWidth="true">
                    Explore Maps
                </MudButton>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

<MudAlert Severity="Severity.Info" Class="mb-4">
    <MudText Typo="Typo.body2">
        <strong>Supported Activities:</strong> Running, Nordic Skiing, Kayaking, Walking, and more.
        <br />
        <strong>GPX Features:</strong> Distance calculation, elevation analysis, speed metrics, heart rate data, and interactive route visualization.
    </MudText>
</MudAlert>
